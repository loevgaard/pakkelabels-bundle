{% trans_default_domain 'LoevgaardPakkelabelsBundle' %}

<h1>{{ 'country_mapping.index.heading'|trans }}</h1>

<div class="actions">
    <a href="{{ path('loevgaard_pakkelabels_country_mapping_new') }}" class="btn btn-primary">{{ 'layout.create'|trans }}</a>
</div>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>{{ 'country_mapping.index.id'|trans }}</th>
            <th>{{ 'country_mapping.index.source'|trans }}</th>
            <th>&nbsp;</th>
            <th>{{ 'country_mapping.index.country_code'|trans }}</th>
            <th>{{ 'layout.actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for countryMapping in countryMappings %}
        <tr>
            <td>{{ countryMapping.id }}</td>
            <td>{{ countryMapping.source }}</td>
            <td><span class="glyphicon glyphicon-arrow-right"></span></td>
            <td>{{ countryMapping.countryCode }}</td>
            <td nowrap>
                <a class="btn btn-sm btn-default" href="{{ path('loevgaard_pakkelabels_country_mapping_show', {id: countryMapping.id}) }}"><span class="glyphicon glyphicon-eye-open"></span> {{ 'layout.show'|trans }}</a>
                <a class="btn btn-sm btn-default" href="{{ path('loevgaard_pakkelabels_country_mapping_edit', {id: countryMapping.id}) }}"><span class="glyphicon glyphicon-edit"></span> {{ 'layout.edit'|trans }}</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{{ knp_pagination_render(countryMappings) }}